<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayButtonView">
        <attr name="progress" format="float" />
        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="playButtonTint" format="color" />
        <attr name="pauseButtonTint" format="color" />
        <attr name="buttonState">
            <flag name="play" value="0" />
            <flag name="pause" value="1" />
        </attr>
    </declare-styleable>
</resources>